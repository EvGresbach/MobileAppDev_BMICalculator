<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Welcome to Xamarin.Forms!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label x:Name="TheLabel"/>
        <Label Text="Start developing now" FontSize="Title" Padding="30,10,30,10"/>
        <Label Text="Make changes to your XAML file and save to see your UI update in the running app with XAML Hot Reload. Give it a try!" FontSize="16" Padding="30,0,30,0"/>
        <Editor x:Name="The_Input" Placeholder="Name"/>
        <Button Text="Click Me" Clicked="Handle_Clicked"/>
        <Label x:Name="BMI_Text"/>
        <Editor x:Name="User_Weight" Placeholder="Weight"/>
        <Editor x:Name="User_Height" Placeholder="Height in inches"/>
        <Button Text="Calculate BMI" Clicked="Calculate_BMI"/> 
    </StackLayout>

</ContentPage>
